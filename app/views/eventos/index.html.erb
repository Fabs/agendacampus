<h1>Listing eventos</h1>

<table>
  <tr>
    <th>Titulo</th>
    <th>Palestrante</th>
    <th>Data</th>
    <th>Inicio</th>
    <th>Fim</th>
    <th>Tipo</th>
    <th>Area</th>
  </tr>

<% for evento in @eventos %>
  <tr>
    <td><%=h evento.titulo %></td>
    <td><%=h evento.palestrante %></td>
    <td><%=h evento.data %></td>
    <td><%=h evento.inicio %></td>
    <td><%=h evento.fim %></td>
    <td><%=h evento.tipo %></td>
    <td><%=h evento.area %></td>
    <td><%= link_to 'Show', evento %></td>
    <td><%= link_to 'Edit', edit_evento_path(evento) %></td>
    <td><%= link_to 'Destroy', evento, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

